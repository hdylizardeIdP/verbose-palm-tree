# Schwab API Configuration
# Copy this file to .env and fill in your actual credentials

# Schwab API Credentials
SCHWAB_API_KEY=your_api_key_here
SCHWAB_APP_SECRET=your_app_secret_here
SCHWAB_CALLBACK_URL=https://localhost:8182
SCHWAB_TOKEN_PATH=.schwab_tokens.json

# Token Encryption Key (REQUIRED for secure token storage)
# Generate a new key with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# IMPORTANT: Store this key securely and NEVER commit it to version control
SCHWAB_TOKEN_ENCRYPTION_KEY=your_generated_fernet_key_here

# Account Configuration
SCHWAB_ACCOUNT_NUMBER=your_account_hash_here

# Dollar Cost Averaging (DCA) Configuration
DCA_ENABLED=false
DCA_AMOUNT=100.0
DCA_FREQUENCY=weekly
DCA_SYMBOLS=SPY,VOO,QQQ

# Dividend Reinvestment (DRIP) Configuration
DRIP_ENABLED=false

# Portfolio Rebalancing Configuration
REBALANCE_ENABLED=false
REBALANCE_THRESHOLD=0.05
# Target allocation as JSON: {"SYMBOL": percentage, ...}
# Percentages should sum to 1.0
TARGET_ALLOCATION={"SPY": 0.40, "QQQ": 0.30, "IWM": 0.15, "AGG": 0.15}

# Opportunistic Buying Configuration
OPPORTUNISTIC_ENABLED=false
OPPORTUNISTIC_DIP_THRESHOLD=0.03

# Options Trading Configuration
OPTIONS_ENABLED=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=schwab_app.log
